{
  "mcpServers": {
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${input:github_token}"
      }
    }
  },
  "inputs": {
    "github_token": {
      "type": "promptString",
      "password": true,
      "description": "Your GitHub Personal Access Token"
    }
  }
}